{{#is category 'index'}}
<header class="header header--index">

	<div class="row">
		<div class="header-cta">
			<h1 class="display3">{{title}}</h1>
			<h2 class="display3-subhead">{{shortname}}</h2>
		</div>
	</div>
</header>
{{/is}}

{{#is category 'category'}}

	<header class="header header--category">

		<div class="header-cta">
			<h1 class="display3">{{title}}</h1>
			<h2 class="display3-subhead">{{shortname}}</h2>
		</div>

		<div class="header-photoContainer">
			<div id="route-photos" class="owl-carousel">
			{{#each Photos}}
				<div class="item"> <img src="../img/routes/{{item}}"> </div>
			{{/each}}
			</div>
		</div>

	</header>


{{/is}}

{{#is category 'route'}}
<header class="header header--route">

	<div class="header-photoContainer">
		<div id="route-photos" class="owl-carousel">
			{{#each Photos}}
			<div class="item"> <img src="../img/routes/{{item}}"> </div>
			{{/each}}
		</div>
	</div>

</header>
<div class="header-route">
	<div class="row">

			<img class="route-category ribbon-icon" src="../img/icon_{{tag}}.png" alt="">
			<h1 class="header-route-title">{{title}}</h1>
			<h2 class="header-route-subtitle">{{shortname}}</h2>



			<div class="header-route-cta header-route-cta--{{tag}} show-for-large-up">
        <a class="button" href="{{#if formlink}} {{formlink}} {{else}} form.html {{/if}}">
          {{#is lang "en"}} More info and booking {{/is}}
          {{#is lang "fr"}} Plus d'information et réserves {{/is}}
          {{#is lang "es"}} Más información y reservas {{/is}}
				</a>
				<div class="route-price">
					{{Price}}
				</div>
			</div>
			<table class="route-properties route-properties--{{tag}}">
				<tr>
					<td>
						<i class="fa fa-clock-o fa-3x route-item"></i>
              {{#is lang "en"}} Length {{/is}}
              {{#is lang "fr"}} Durée {{/is}}
              {{#is lang "es"}} Duración {{/is}}
					</td>
					<td>
						<i class="fa fa-arrows-h fa-3x route-item"></i>
              {{#is lang "en"}} Distance {{/is}}
              {{#is lang "fr"}} Distance {{/is}}
              {{#is lang "es"}} Distancia {{/is}}
					</td>
					<td>
						<i class="fa fa-child fa-3x route-item"></i>
              {{#is lang "en"}} Difficulty {{/is}}
              {{#is lang "fr"}} Difficulté {{/is}}
              {{#is lang "es"}} Dificultad {{/is}}
					</td>
					<td>
						<i class="fa fa-signal fa-3x route-item"></i>
              {{#is lang "en"}} Slope {{/is}}
              {{#is lang "fr"}} Dénivelé {{/is}}
              {{#is lang "es"}} Desnivel {{/is}}
					</td>
				</tr>
				<tr>
					<td>{{Length}}</td>
					<td>{{Distance}}</td>
					<td>{{Difficulty}}</td>
					<td>{{Slope}}</td>
				</tr>
			</table>

	</div>
	<div class="row hide-for-large-up">
		<div class="header-route-cta header-route-cta--{{tag}} text-center">
      <a class="button u-mgt" href="{{#if formlink}} {{formlink}} {{else}} form.html {{/if}}">
        {{#is lang "en"}} More info and booking {{/is}}
        {{#is lang "fr"}} Plus d'information et réserves {{/is}}
        {{#is lang "es"}} Más información y reservas {{/is}}
      </a>
		</div>
	</div>
</div>

{{/is}}

{{#is category 'form'}}

	<header class="header header--category">

		<div class="header-cta">
			<h1 class="display3">{{title}}</h1>
			<h2 class="display3-subhead">{{shortname}}</h2>
		</div>

		<div class="header-photoContainer">
			<div id="route-photos" class="owl-carousel">
			{{#each Photos}}
				<div class="item"> <img src="../img/routes/{{item}}"> </div>
			{{/each}}
			</div>
		</div>

	</header>


{{/is}}
